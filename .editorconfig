# top-most EditorConfig file
root = true

# 2 space indentation
[*.{js, ts}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

# Matches the exact files either package.json
[{package.json}]
indent_style = space
indent_size = 2